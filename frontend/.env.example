# ============================================
# API Configuration
# ============================================

# Backend API URL
REACT_APP_API_URL=http://localhost:8000/api

# WebSocket URL (for real-time features)
REACT_APP_WS_URL=ws://localhost:8000/ws

# ============================================
# WebRTC Configuration (Video Call)
# ============================================

# STUN Server (for peer connection)
REACT_APP_STUN_SERVER=stun:stun.l.google.com:19302

# TURN Server (optional, for firewall bypass)
REACT_APP_TURN_SERVER=
REACT_APP_TURN_USERNAME=
REACT_APP_TURN_PASSWORD=

# ============================================
# App Configuration
# ============================================

REACT_APP_NAME=AI Memory Avatar
REACT_APP_VERSION=1.0.0

# Max file upload sizes (in MB)
REACT_APP_MAX_IMAGE_SIZE=10
REACT_APP_MAX_AUDIO_SIZE=50
REACT_APP_MAX_VIDEO_SIZE=100

# ============================================
# Feature Flags
# ============================================

# Enable video call feature
REACT_APP_ENABLE_VIDEO_CALL=true

# Enable voice chat feature
REACT_APP_ENABLE_VOICE_CHAT=true

# Enable text chat feature
REACT_APP_ENABLE_TEXT_CHAT=true

# ============================================
# Analytics (Optional)
# ============================================

# Google Analytics
# REACT_APP_GA_TRACKING_ID=

# Sentry Error Tracking
# REACT_APP_SENTRY_DSN=

# ============================================
# Production Settings
# ============================================

# For production, update these:
# REACT_APP_API_URL=https://api.yourdomain.com
# REACT_APP_WS_URL=wss://api.yourdomain.com/ws
