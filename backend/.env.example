# ============================================
# Django Settings
# ============================================
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION-xyz123abc456
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ============================================
# MySQL Database Configuration
# ============================================
DB_ENGINE=django.db.backends.mysql
DB_NAME=ai_avatar
DB_USER=avataruser
DB_PASSWORD=password123
DB_HOST=localhost
DB_PORT=3306

# For Docker, use:
# DB_HOST=mysql

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0

# For Docker, use:
# REDIS_URL=redis://redis:6379/0

# ============================================
# CORS Settings
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# FREE AI API Keys (No Credit Card Required!)
# ============================================

# Google Gemini API (FREE)
# Get from: https://makersuite.google.com/app/apikey
# Limits: 60 requests/min, 1500/day (FREE forever!)
GEMINI_API_KEY=

# Optional: HuggingFace Token (FREE)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=

# ============================================
# Speech Settings (All FREE & Local)
# ============================================

# Whisper Model Size (tiny, base, small, medium, large)
# base = good balance of speed/quality
WHISPER_MODEL=base

# TTS Engine (coqui, gtts, pyttsx3)
# coqui = best quality (local, free)
TTS_ENGINE=coqui

# ============================================
# Video Animation Settings (MAIN FEATURE!)
# ============================================

# Animation Method (wav2lip, sadtalker, simple)
# wav2lip = best lip sync
ANIMATION_METHOD=wav2lip

# Video Quality
VIDEO_FPS=25
VIDEO_RESOLUTION=512x512

# Cache generated videos (speeds up repeat responses)
ENABLE_VIDEO_CACHE=True

# GPU Acceleration (if available)
USE_GPU=False

# ============================================
# WebRTC Settings (Video Call)
# ============================================

# STUN Server (for WebRTC connection)
STUN_SERVER_URL=stun:stun.l.google.com:19302

# TURN Server (optional, for firewall bypass)
TURN_SERVER_URL=
TURN_USERNAME=
TURN_PASSWORD=

# ============================================
# File Upload Settings
# ============================================

# Max upload size (in bytes)
MAX_UPLOAD_SIZE=104857600  # 100MB

# Media file paths
MEDIA_ROOT=/app/media
MEDIA_URL=/media/

# ============================================
# Celery Settings (Background Tasks)
# ============================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Performance Settings
# ============================================

# Database connection pooling
DB_CONN_MAX_AGE=600

# Cache timeout (in seconds)
CACHE_TIMEOUT=86400  # 24 hours

# ============================================
# Security Settings (PRODUCTION)
# ============================================

# Set to False in production!
# DEBUG=False

# Set proper hosts in production
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Use strong secret key in production
# SECRET_KEY=generate-with-django-secret-key-generator

# ============================================
# Optional: AWS S3 (For Production Media Storage)
# ============================================

# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=us-east-1
# USE_S3=False

# ============================================
# Optional: Email Settings
# ============================================

# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ============================================
# Logging
# ============================================

LOG_LEVEL=INFO
LOG_FILE=logs/django.log
